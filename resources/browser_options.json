{
    "chrome": {
        "arguments": [
            "--disable-gpu",
            "--headless",
            "--window-size=1920,1080",
            "--incognito",
            "--start-maximized",
            "--disable-extensions",
            "--disable-infobars"
        ],
        "experimental_options": {
            "excludeSwitches": ["enable-logging"]
        }
    },
    "firefox": {
        "arguments": [
            "--disable-gpu",
            "--width=1920",
            "--height=1080",
            "--incognito",
            "--start-maximized",
            "--disable-extensions",
            "--disable-infobars"
        ]
    },
    "edge": {
        "arguments": [
            "--disable-gpu",
            "--window-size=1920,1080",
            "--inprivate",
            "--start-maximized",
            "--disable-extensions",
            "--disable-infobars"
        ]
    }
}